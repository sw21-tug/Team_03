<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ingredient_layout"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/ingredient_amount"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_weight="1"
        android:textAlignment="textStart"
        android:paddingEnd="12dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/ingredient_layout"
        app:layout_constraintTop_toTopOf="@id/ingredient_layout"
        app:layout_constraintBottom_toBottomOf="@id/ingredient_name"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <TextView
        android:id="@+id/ingredient_name"
        android:layout_marginStart="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_weight="1"
        android:paddingEnd="12dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="@id/ingredient_layout"
        app:layout_constraintEnd_toEndOf="@id/ingredient_layout"
        app:layout_constraintStart_toEndOf="@+id/ingredient_amount"
        app:layout_constraintTop_toTopOf="@id/ingredient_layout"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <TextView
        android:id="@+id/ingredient_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/ingredient_name"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toEndOf="@+id/ingredient_amount"
        app:layout_constraintTop_toTopOf="@id/ingredient_layout" />


</androidx.constraintlayout.widget.ConstraintLayout>
