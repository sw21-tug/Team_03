<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginVertical="2dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">


    <LinearLayout
        android:id="@+id/recommendedCocktailsConstraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cocktail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center"
            android:text="@string/cocktail_name"
            android:textColor="@android:color/black"
            android:layout_marginHorizontal="10dp"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/recommendedCocktailsImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@string/cocktail_image"
            app:srcCompat="@drawable/ic_cocktail_image" />

        <RatingBar
            android:id="@+id/cocktail_rating_bar"
            style="@android:style/Widget.Holo.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:progressBackgroundTint="@android:color/darker_gray"
            android:progressTint="@color/accent_color" />

        <TextView
            android:id="@+id/cocktail_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginVertical="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="0dp"
            android:text="@string/cocktail_name"
            android:textColor="@android:color/black"
            android:textSize="0sp"
            android:textStyle="bold"
            android:visibility="invisible" />
    </LinearLayout>
</androidx.cardview.widget.CardView>